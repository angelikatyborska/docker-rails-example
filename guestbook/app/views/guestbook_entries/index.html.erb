<div class="col-xs-12 text-center">
  <h1>Guestbook</h1>

  <section class="guestbook-entries col-xs-12">
    <% @guestbook_entries.each do |entry| %>
        <article>
          <p class="body">
            <%= entry.body %>
          </p>
          <p class="created-at small">
            <%= l(entry.created_at, format: :short) %>
          </p>
        </article>
    <% end %>
  </section>

  <section class="guestbook-add col-xs-12 col-md-offset-3 col-md-6">
    <%= form_for @guestbook_entry, url: { action: 'create' } do |f| %>
        <div class="form-group">
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <%= f.submit 'Add', class: 'btn btn-primary' %>
    <% end %>
  </section>
</div>